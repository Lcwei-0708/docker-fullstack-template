/var/log/nginx/*.log {
    daily
    missingok
    rotate 7
    notifempty
    dateext
    dateformat .%Y-%m-%d
    create 0644 root root
    su root root
    sharedscripts
    postrotate
        if [ -f /var/run/nginx.pid ]; then
            kill -USR1 $(cat /var/run/nginx.pid)
        fi
    endscript
}